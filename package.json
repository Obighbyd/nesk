{
  "name": "neskjs",
  "version": "0.0.1",
  "description": "Modern, fast, powerful koajs web framework",
  "main": "index.js",
  "scripts": {
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prettier": "prettier */**/*.ts --ignore-path ./.prettierignore --write && git status",
    "build": "gulp build && gulp move",
    "build:lib": "gulp build --dist lib",
    "prepublish": "npm run build:lib",
    "publish": "./node_modules/.bin/lerna publish --exact -m \"chore(release) publish %s\"",
    "publish:next": "./node_modules/.bin/lerna publish --npm-tag=next --skip-git"
  },
  "engines": {
    "node": ">=6.11.0"
  },
  "author": "Kamil Mysliwiec",
  "license": "MIT",
  "dependencies": {
    "@neskjs/common": "^0.0.1",
    "@neskjs/core": "^0.0.1",
    "@neskjs/microservices": "^0.0.1",
    "@neskjs/testing": "^0.0.1",
    "@neskjs/websockets": "^0.0.1",
    "@types/axios": "^0.14.0",
    "axios": "^0.17.1",
    "class-transformer": "^0.1.8",
    "class-validator": "^0.8.1",
    "cli-color": "^1.1.0",
    "engine.io-client": "^3.1.1",
    "fast-safe-stringify": "^1.2.0",
    "iterare": "0.0.8",
    "json-socket": "^0.2.1",
    "koa": "^2.5.0",
    "koa-router": "^7.4.0",
    "multer": "^1.3.0",
    "opencollective": "^1.0.3",
    "optional": "^0.1.4",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.2",
    "socket.io": "^2.0.3",
    "typescript": "^2.4.1"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/chai-as-promised": "0.0.31",
    "@types/koa": "^2.0.44",
    "@types/mocha": "^2.2.38",
    "@types/node": "^7.0.5",
    "@types/redis": "^0.12.36",
    "@types/reflect-metadata": "0.0.5",
    "@types/sinon": "^1.16.36",
    "@types/socket.io": "^1.4.29",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "chai": "^3.5.0",
    "chai-as-promised": "^7.1.1",
    "clang-format": "^1.1.0",
    "concurrently": "^3.4.0",
    "core-js": "^2.4.1",
    "coveralls": "^2.11.16",
    "gulp": "^3.9.1",
    "gulp-clang-format": "^1.0.23",
    "gulp-sequence": "^0.4.6",
    "gulp-typescript": "^3.1.6",
    "gulp-watch": "^4.3.11",
    "imports-loader": "^0.7.0",
    "istanbul": "^0.4.5",
    "json-loader": "^0.5.4",
    "koa-bodyparser": "^4.2.0",
    "koa-cors": "^0.0.16",
    "lerna": "^2.9.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "prettier": "^1.9.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.8.0",
    "ts-node": "^3.2.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "src/**/*.spec.ts",
      "src/core/adapters/*.ts",
      "src/websockets/adapters/*.ts",
      "src/**/nest-*.ts",
      "src/core/errors/**/*",
      "src/common/exceptions/*.ts",
      "src/common/http/*.ts",
      "src/microservices/exceptions/",
      "src/microservices/microservices-module.ts",
      "src/core/middlewares/middlewares-module.ts",
      "src/common/services/logger.service.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
